[
    {dj, [
        {http_server, "http://127.0.0.1:8000"}
    ]},

    {gproc, [{gproc_dist, all}]},

    {lager, [
        {colored, true},
        {log_root, "log"},
        {handlers, [
            {lager_console_backend, info},
            {lager_file_backend, [{file, "console.log"}, {level, info}, {data, "$D0"}, {count, 7}]},
            {lager_file_backend, [{file, "error.log"}, {level, error}, {data, "$D0"}, {count, 7}]}
        ]}
    ]}
].